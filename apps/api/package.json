{
    "name": "api",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "clean": "rm -rf dist coverage",
        "container:start": "ts-node scripts/container-start",
        "container:stop": "ts-node scripts/container-stop",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "dev": "nest start --watch",
        "start": "nest start",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "migrate:db:test": "dotenv -e .env.test prisma migrate deploy",
        "seed:db:test": "dotenv -e .env.test prisma db seed",
        "studio:db:test": "dotenv -e .env.test prisma studio",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest --colors --runInBand",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json"
    },
    "dependencies": {
        "@nestjs/common": "9.1.4",
        "@nestjs/config": "2.2.0",
        "@nestjs/core": "9.1.4",
        "@nestjs/jwt": "9.0.0",
        "@nestjs/passport": "9.0.0",
        "@nestjs/platform-express": "9.1.4",
        "@nestjs/swagger": "6.1.2",
        "@prisma/client": "4.4.0",
        "bcryptjs": "2.4.3",
        "cookie-parser": "1.4.6",
        "passport": "0.6.0",
        "passport-jwt": "4.0.0",
        "passport-local": "1.0.0",
        "reflect-metadata": "0.1.13",
        "rimraf": "3.0.2",
        "rxjs": "7.5.7",
        "swagger-ui-express": "4.5.0"
    },
    "devDependencies": {
        "@nestjs/cli": "9.1.4",
        "@nestjs/schematics": "9.0.3",
        "@nestjs/testing": "9.1.4",
        "@types/bcryptjs": "2.4.2",
        "@types/express": "4.17.14",
        "@types/multer": "1.4.7",
        "@types/passport-jwt": "3.0.7",
        "@types/passport-local": "1.0.34",
        "@types/supertest": "2.0.12",
        "dotenv-cli": "6.0.0",
        "eslint-config-custom": "*",
        "prisma": "4.4.0",
        "source-map-support": "0.5.21",
        "supertest": "6.3.0",
        "ts-jest": "29.0.3",
        "ts-loader": "9.4.1",
        "ts-node": "10.9.1",
        "tsconfig": "*",
        "tsconfig-paths": "4.1.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    },
    "prisma": {
        "seed": "ts-node prisma/seed.ts"
    }
}
